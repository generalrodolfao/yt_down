# Exemplo de configuração Nginx para o YouTube Downloader
# Copie este arquivo para /etc/nginx/sites-available/yt-downloader
# e ajuste conforme necessário

server {
    listen 80;
    server_name seu-dominio.com;  # Substitua pelo seu domínio ou IP

    # Tamanho máximo de upload (importante para vídeos grandes)
    client_max_body_size 10G;

    # Timeouts aumentados para processamento longo
    proxy_connect_timeout 600s;
    proxy_send_timeout 600s;
    proxy_read_timeout 600s;

    location / {
        proxy_pass http://localhost:5002;
        proxy_http_version 1.1;
        
        # Headers importantes
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Buffering desabilitado para streaming
        proxy_buffering off;
    }
}

